<h1>The inventory data is as follows:</h1>
<br>


<table class="styled-table" border="1px solid black">
<form method='POST', action="/inventory-data" id = 'form1'>
    <tr>
        <th>Item ID</th>
        <th>Item Name</th>
        <th>Item Cost</th>
        <th>Item Quantity</th>
        <th></th>
        <th></th>
    </tr>
    <% for (let i = 0; i < values.length; i++)  {%>
        <tr>
            <td><%= values[i].item_id %></td>
            <td><%= values[i].item_name %></td>
            <td>â‚¹<%= values[i].item_cost %></td>
            <td><%= values[i].item_quantity %></td>
            <td><button type = 'button' id = '<%= values[i].item_id%>' onclick="showTextBox(id)">Delete Item</button></td>
            <td >
                    <input class="aa" id = 'item<%=values[i].item_id%>', type = 'number' name = 'item<%=values[i].item_id%>'  /hidden>
                </td>
            </tr>
            <% } %>
        </table>
    </form>
<br>
<input type = "submit", value = "Confirm Deletion", form = 'form1'>
